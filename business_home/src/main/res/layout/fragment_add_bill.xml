<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_8c8c8c" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:text="0"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_8c8c8c" />

        <LinearLayout
            android:id="@+id/ll_remard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_remark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="@string/remark"
                android:textColor="@color/color_000000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:ellipsize="end"
                android:hint="@string/remark_hint"
                android:maxLines="1"
                android:textSize="13sp" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4">

            <TextView
                android:id="@+id/tv_num_1"
                style="@style/add_account_input_button"
                android:text="1" />

            <TextView
                android:id="@+id/tv_num_2"
                style="@style/add_account_input_button"
                android:text="2" />

            <TextView
                android:id="@+id/tv_num_3"
                style="@style/add_account_input_button"
                android:text="3" />

            <LinearLayout
                android:id="@+id/ll_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:background="@drawable/item_add_account_button_bg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_calendar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_calendar" />

                <TextView
                    android:id="@+id/tv_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="@string/today"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_num_4"
                style="@style/add_account_input_button"
                android:text="4" />

            <TextView
                android:id="@+id/tv_num_5"
                style="@style/add_account_input_button"
                android:text="5" />

            <TextView
                android:id="@+id/tv_num_6"
                style="@style/add_account_input_button"
                android:text="6" />

            <FrameLayout
                android:id="@+id/fl_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:background="@drawable/item_add_account_button_bg">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_del" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_num_7"
                style="@style/add_account_input_button"
                android:text="7" />

            <TextView
                android:id="@+id/tv_num_8"
                style="@style/add_account_input_button"
                android:text="8" />

            <TextView
                android:id="@+id/tv_num_9"
                style="@style/add_account_input_button"
                android:text="9" />

            <TextView
                android:id="@+id/tv_enter"
                style="@style/add_account_input_button"
                android:layout_rowSpan="2"
                android:layout_gravity="fill"
                android:background="@color/color_main"
                android:text="确定"
                android:textColor="@color/color_ffffff" />

            <TextView
                android:id="@+id/tv_num_dot"
                style="@style/add_account_input_button"
                android:text="." />

            <TextView
                android:id="@+id/tv_num_0"
                style="@style/add_account_input_button"
                android:layout_columnSpan="2"
                android:text="0" />


        </GridLayout>
    </LinearLayout>
</LinearLayout>